{
  "name": "C# dev-container",
  "build": {
	  "dockerfile": "Dockerfile",
    "args": {
       "VARIANT": "5.0"
	  }
  },
  "settings": {
	  "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
	  "ms-dotnettools.csharp",
	  "jchannon.csharpextensions",
	  "leopotam.csharpfixformat"
  ],
  "postCreateCommand": "dotnet restore",
}
